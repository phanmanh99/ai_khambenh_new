            <button class="open-button" onclick="openForm()">
                <img src="./images/chat.png" alt="" width="40px" height="40px">
            </button>

            <div class="chat-popup" id="myForm">
            <div class="form-container">
                <div class="messager-header">
                    <p>Chat Bot</p>
                    <button onclick="closeForm()">X</button>
                </div>
                <div id="messager" class="messager-content">
                </div>
                <div class="send">
                    <textarea placeholder="Type message.." name="msg" id="msg" required></textarea>
    
                    <button type="submit" class="btn" onclick="send()">
                        <img src="./images/send.png" alt="" width="40px" height="40px">
                    </button>
                </div>
            </div>
            </div>
            <script>
                async function send() {
                    myBody = document.getElementById("msg").value;
                    document.getElementById("messager").innerHTML += `<p>Bạn: ${myBody}</p>`;
                    document.getElementById("msg").value = "";

                    const response = await fetch(`/chatbot?messager=${myBody}`, {
                        method: 'get',
                        headers: {
                        'Content-Type': 'application/json'
                        }
                    });
                    const myJson = await response.json(); //extract JSON from the http response
                    document.getElementById("messager").innerHTML += `<p>Chat Bot: ${myJson.messager}</p>`;
                }
                function openForm() {
                document.getElementById("myForm").style.display = "block";
                }

                function closeForm() {
                document.getElementById("myForm").style.display = "none";
                }
</script>
        </div>
